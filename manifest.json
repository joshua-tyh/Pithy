{
    "manifest_version": 3,
    "name": "Pithy",
    "version": "0.1",
    "author": {
        "email": "joshuatanyanhao@gmail.com"
    },
    "permissions": [
        "contextMenus"
      ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-script.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}